# LLM Configuration
# Options: 'openai', 'anthropic'
LLM_PROVIDER=openai
# Model name depends on provider (e.g., 'gpt-4o-mini', 'claude-3-haiku-20240307')
LLM_MODEL_NAME=gpt-4o-mini

# API Keys (only fill the one for your chosen provider)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Vector Store Configuration
# Options: 'standard', 'semantic'
DEFAULT_VECTOR_STORE=standard

# Qdrant Configuration
# For Docker: QDRANT_HOST=qdrant, QDRANT_PORT=6333, leave QDRANT_API_KEY blank
# For Cloud: QDRANT_HOST=your-cloud-url, QDRANT_API_KEY=your-api-key
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET_NAME=askdnd-ai
AWS_REGION=us-east-1
AWS_S3_PDF_PREFIX=source-pdfs/

# Flask Configuration
SECRET_KEY=generate_a_secure_random_key
APP_PASSWORD=your_app_password

# Debug Mode (set to 1 for development, 0 for production)
FLASK_DEBUG=1 

# Google Analytics
GA_MEASUREMENT_ID=G-21245gdr6